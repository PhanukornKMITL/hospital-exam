                "email": {
                    "type": "string"
                },
                "firstNameEN": {
                    "type": "string"
                },
                "firstNameTH": {
                    "type": "string"
                },
                "gender": {
                    "type": "string"
                },
                "hospitalId": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "lastNameEN": {
                    "type": "string"
                },
                "lastNameTH": {
                    "type": "string"
                },
                "middleNameEN": {
                    "type": "string"
                },
                "middleNameTH": {
                    "type": "string"
                },
                "nationalId": {
                    "type": "string"
                },
                "passportId": {
                    "type": "string"
                },
                "patientHN": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                }
            }
        },
        "dto.SearchPatientRequest": {
            "type": "object",
            "properties": {
                "dateOfBirth": {
                    "description": "YYYY-MM-DD",
                    "type": "string",
