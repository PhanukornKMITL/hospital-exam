                },
                "limit": {
                    "type": "integer"
                },
                "page": {
                    "type": "integer"
                },
                "total": {
                    "type": "integer"
                }
            }
        },
        "dto.PatientResponse": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "string"
