    "definitions": {
        "dto.CreateHospitalRequest": {
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {
                "address": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            }
        },
        "dto.CreatePatientRequest": {
            "type": "object",
            "required": [
                "dateOfBirth",
                "firstNameEN",
                "firstNameTH",
                "gender",
                "lastNameEN",
                "lastNameTH",
                "phoneNumber"
            ],
            "properties": {
                "dateOfBirth": {
                    "description": "expected format: YYYY-MM-DD",
                    "type": "string",
                    "example": "1990-01-15"
                },
                "email": {
                    "type": "string"
                },
                "firstNameEN": {
                    "type": "string"
                },
                "firstNameTH": {
                    "type": "string"
                },
                "gender": {
                    "type": "string",
                    "enum": [
                        "M",
                        "F"
                    ]
                },
                "lastNameEN": {
                    "type": "string"
                },
                "lastNameTH": {
                    "type": "string"
                },
                "middleNameEN": {
                    "type": "string"
                },
                "middleNameTH": {
                    "type": "string"
                },
                "nationalId": {
                    "type": "string"
                },
                "passportId": {
                    "type": "string"
                },
                "phoneNumber": {
                    "type": "string"
                }
            }
        },
        "dto.CreateStaffRequest": {
            "type": "object",
            "required": [
                "confirmPassword",
                "hospitalId",
                "password",
                "username"
            ],
            "properties": {
                "confirmPassword": {
                    "type": "string"
                },
                "hospitalId": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "dto.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string",
                    "example": "error message here"
                }
            }
        },
        "dto.HospitalResponse": {
            "type": "object",
            "properties": {
                "address": {
                    "type": "string"
                },
                "createdAt": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "updatedAt": {
                    "type": "string"
                }
            }
        },
        "dto.LoginStaffRequest": {
            "type": "object",
            "required": [
                "hospitalId",
                "password",
                "username"
            ],
            "properties": {
                "hospitalId": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "username": {
                    "type": "string"
                }
            }
        },
        "dto.PaginatedPatientsResponse": {
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/dto.PatientResponse"
