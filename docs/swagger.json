                },
                "limit": {
                    "type": "integer"
                },
                "middleNameEN": {
                    "type": "string"
                },
                "middleNameTH": {
                    "type": "string"
                },
                "nationalId": {
                    "type": "string"
                },
                "page": {
                    "type": "integer"
                },
                "passportId": {
                    "type": "string"
                },
                "patientHN": {
                    "type": "string"
